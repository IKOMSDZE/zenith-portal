
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions (Zero Latency - Uses Auth Token) ---
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Role-based access using Custom Claims (Token-based, no DB reads)
    function hasRole(role) {
      return isSignedIn() && request.auth.token.role == role;
    }

    // Owner check based on UID field in document
    function isOwner(data) {
      return isSignedIn() && data.uid == request.auth.uid;
    }

    // --- Collection Rules ---

    match /users/{userId} {
      // Users can read their own profile, Admins/Managers/HR can read all
      allow read: if isSignedIn() && (
        request.auth.uid == userId || 
        hasRole('Admin') || hasRole('Manager') || hasRole('HR')
      );
      // Only Admins can create/delete users, users can update their own non-role fields
      allow create, delete: if hasRole('Admin');
      allow update: if hasRole('Admin') || (
        request.auth.uid == userId && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'isAdmin', 'vacationDaysTotal'])
      );
    }

    match /attendance/{id} {
      allow read: if isSignedIn() && (hasRole('Admin') || hasRole('Manager') || isOwner(resource.data));
      // Enforce UID matching on creation
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if hasRole('Admin') || isOwner(resource.data);
    }

    match /vacations/{id} {
      allow read: if isSignedIn() && (hasRole('Admin') || hasRole('Manager') || hasRole('HR') || isOwner(resource.data));
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      // Approval/Rejection only by specific roles
      allow update: if hasRole('Admin') || hasRole('Manager') || hasRole('HR');
      allow delete: if hasRole('Admin');
    }

    match /branches/{branchId} {
      allow read: if isSignedIn();
      allow write: if hasRole('Admin');
    }

    match /settings/{docId} {
      allow read: if isSignedIn();
      allow write: if hasRole('Admin');
    }

    match /branchBalances/{branchId} {
      allow read: if isSignedIn() && (hasRole('Admin') || hasRole('Manager') || hasRole('Accountant'));
      allow write: if isSignedIn() && (hasRole('Admin') || hasRole('Manager'));
    }

    match /cashHistory/{id} {
      allow read: if isSignedIn() && (hasRole('Admin') || hasRole('Manager') || hasRole('Accountant'));
      allow create: if isSignedIn();
      allow update, delete: if hasRole('Admin') || hasRole('Accountant');
    }

    match /news/{id} {
      allow read: if isSignedIn();
      allow write: if hasRole('Admin') || hasRole('Editor');
    }

    // Default catch-all
    match /{document=**} {
      allow read, write: if hasRole('Admin');
    }
  }
}
